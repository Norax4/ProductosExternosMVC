@model ProductosExternosMVC.Services.ProductoDto

<div>
    <h2>Modificar Producto</h2>
    <form method="post" action="/Home/ModificarProducto">
        <input type="hidden" name="id" value="@Model.Id" />
        <label>Nombre:
            <input type="text" name="nombre" value="@Model.Nombre" required />
        </label>
        <label>Precio:
            <input type="number" name="precio" value="@Model.Precio" step="any" placeholder="@Model.Precio" required />
        </label>
        <button type="submit">Guardar Cambios</button>
    </form>
</div>